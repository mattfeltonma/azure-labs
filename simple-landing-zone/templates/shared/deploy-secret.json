{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultResourceId": {
            "type": "string",
            "metadata": {
                "description": "The Key Vault Resource Id"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location of the Key Vault containing the secret"
            }
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "The name of the secret"
            }
        },
        "secretValue": {
            "type": "securestring",
            "metadata": {
                "description": "The value of the secret"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that will be associated to the secret"
            }
        }
    },
    "variables": {
        "keyVaultApiVersion": "2019-09-01"
    },
    "resources": [
        {
            "name": "[concat(parameters('keyVaultResourceId'),'/',parameters('secretName'))]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "[variables('keyVaultApiVersion')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "value": "[parameters('secretValue')]"
            }
        }
    ],
    "outputs": {
    }
}
